{
	"name": "@idp/server",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --local",
		"build": "tsc",
		"typegen": "wrangler types",
		"generate:migrations": "drizzle-kit generate",
		"apply:migrations:local": "wrangler d1 migrations apply --local idp-db-local",
		"apply:migrations:preview": "wrangler d1 migrations apply --env preview --remote idp-db-preview",
		"apply:migrations:prod": "wrangler d1 migrations apply --env production --remote idp-db",
		"apply:seed:local": "wrangler d1 execute --file ./src/db/seed.sql --local idp-db-local",
		"apply:seed:preview": "wrangler d1 execute --file ./src/db/seed.sql --env preview --remote idp-db-preview",
		"apply:seed:prod": "wrangler d1 execute --file ./src/db/seed.sql --env production --remote idp-db",
		"deploy:preview": "wrangler deploy --env preview",
		"deploy:prod": "wrangler deploy --env production",
		"fix": "biome check --write ./src",
		"check": "biome check ./src"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts"
		}
	},
	"dependencies": {
		"@hono/valibot-validator": "^0.5.2",
		"@octokit/auth-app": "^7.1.4",
		"drizzle-orm": "^0.36.1",
		"hono": "^4.6.13",
		"octokit": "^4.1.0",
		"valibot": "1.0.0-beta.10"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20241112.0",
		"drizzle-kit": "^0.28.0",
		"typescript": "^5.7.2",
		"wrangler": "^3.95.0"
	}
}
